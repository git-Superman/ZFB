<!-- 小程序收藏组件，更多高级用法请参考文档：https://docs.alipay.com/mini/component/component-favorite -->
<swiper indicator-dots="{{true}}" autoplay="{{true}}" circular="{{true}}">
  <block a:for="{{banner}}" a:key="index" a:if="{{item}}">
    <swiper-item class='swiper-item'>
      <image lazy-load="{{true}}" mode="aspectFill" src="{{item}}"/>
    </swiper-item>
  </block>
</swiper>
<view class='header'>
  <view onTap="handleClick">
    <text>输入您想租用的产品进行搜索</text>
    <image src="/images/icon/main-searchicon.png"/>
  </view>
</view>
